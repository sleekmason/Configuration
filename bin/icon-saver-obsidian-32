#!/bin/bash

mkdir -p ~/.local/share/icons/Obsidian/32x32/status
cd ~/.local/share/icons/Obsidian/32x32/status

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-100.png battery-level-100-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-100.png battery-level-90-symbolic.png

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-080.png battery-level-80-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-080.png battery-level-70-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-060.png battery-level-60-symbolic.png

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-060.png battery-level-50-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-040.png battery-level-40-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-040.png battery-level-30-symbolic.png

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-020.png battery-level-20-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-020.png battery-level-10-symbolic.png

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-charged.png battery-level-100-charged-symbolic.png 
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-100-charging.png battery-level-100-charging-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-080-charging.png battery-level-90-charging-symbolic.png

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-080-charging.png battery-level-80-charging-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-060-charging.png battery-level-70-charging-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-060-charging.png battery-level-60-charging-symbolic.png

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-060-charging.png battery-level-50-charging-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-040-charging.png battery-level-40-charging-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-040-charging.png battery-level-30-charging-symbolic.png

ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-020-charging.png battery-level-20-charging-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-020-charging.png battery-level-10-charging-symbolic.png
ln -s /usr/share/icons/Obsidian/status/32/gpm-battery-000.png battery-level-0-charging-symbolic.png

sudo gtk-update-icon-cache /usr/share/icons/Obsidian
